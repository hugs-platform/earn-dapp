generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coin {
  id      Int     @id @default(autoincrement())
  symbol  String  @unique
  name    String
  apys    Apy[]
}

model Project {
  id            Int  @id @default(autoincrement())
  name          String
  referralLink  String?
  apys    Apy[]
}

model Apy {
  coin          Coin   @relation(fields: [coinId], references: [id])
  coinId        Int
  project       Project @relation(fields: [projectId], references: [id])
  projectId     Int
  apy        Decimal

  @@id([coinId, projectId])

}

